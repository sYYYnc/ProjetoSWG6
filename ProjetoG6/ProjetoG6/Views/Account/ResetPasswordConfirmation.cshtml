@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <h2>
                <strong>Sucesso...</strong>
            </h2>
            <h3>
                @ViewBag.Message <a asp-action="Login">carregue aqui para se autenticar</a>.
            </h3>
        </div>
    }
}
