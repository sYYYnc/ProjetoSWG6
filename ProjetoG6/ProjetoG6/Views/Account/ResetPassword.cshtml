@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="textEmail" title="@ViewData["HelpEmail"]" data-toggle="tooltip"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" id="textPassword" title="@ViewData["HelpPassword"]" data-toggle="tooltip"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" id="textPassConf" title="@ViewData["HelpPasswordConf"]" data-toggle="tooltip"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Reset</button>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script type="text/javascript">
                        $(document).ready(function () {
                            $('#textEmail').tooltip()
                        });
                        $(document).ready(function () {
                            $('#textPassword').tooltip()
                        });
                        $(document).ready(function () {
                            $('#textPassConf').tooltip()
                        });
            </script>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
